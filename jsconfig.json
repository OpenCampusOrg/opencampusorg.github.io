{
  "compilerOptions": {
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "__tests__/*": [
        "tests/*"
      ],
      "~/*": [
        "./*"
      ],
      "@/*": [
        "src/*"
      ],
      "@(.+)/*": [
        "src/$1/*"
      ]
    },
  },
  "exclude": [
    "dist",
    "node_modules",
    "build",
    ".vscode",
    "coverage",
    ".npm",
    ".yarn"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "node"
    ]
  }
}